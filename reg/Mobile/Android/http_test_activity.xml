<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center|center_vertical|left"
		android:background="#00000000"
	>
		<Button android:id="@+id/Button_login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="login"
		/>
		<Button android:id="@+id/Button_logout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="logout"
		/>

		<Button android:id="@+id/Button_test"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="test"
		/>
	</LinearLayout>

	<!-- ipaddr:port -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center|center_vertical|center_horizontal"
		android:background="#00000000"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#A9A9A9"
			android:text="ipaddr"
			android:textSize="16sp"
			android:textStyle="bold"
			android:singleLine="true"
			android:gravity="left|center_vertical|center_horizontal"
			android:layout_gravity="left|center_vertical|center_horizontal"
		/>
		<EditText
			android:id="@+id/EditText_ipaddr"
			android:layout_width="50dp" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical|left"
			android:layout_gravity="center|center_vertical|center_horizontal"
			android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#A9A9A9"
			android:text=""
		/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#A9A9A9"
			android:text=":port"
			android:textSize="16sp"
			android:textStyle="bold"
			android:singleLine="true"
			android:gravity="left|center_vertical|center_horizontal"
			android:layout_gravity="left|center_vertical|center_horizontal"
		/>
		<EditText
			android:id="@+id/EditText_port"
			android:layout_width="50dp" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical|left"
			android:layout_gravity="center|center_vertical|center_horizontal"
			android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#A9A9A9"
			android:text=""
		/>
	</LinearLayout>

	<!-- user id, passwd -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center|center_vertical|center_horizontal"
		android:background="#00000000"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#A9A9A9"
			android:text="User ID"
			android:textSize="16sp"
			android:textStyle="bold"
			android:singleLine="true"
			android:gravity="left|center_vertical|center_horizontal"
			android:layout_gravity="left|center_vertical|center_horizontal"
		/>
		<EditText
			android:id="@+id/EditText_userid"
			android:layout_width="50dp" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical|left"
			android:layout_gravity="center|center_vertical|center_horizontal"
			android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#A9A9A9"
			android:text=""
		/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#A9A9A9"
			android:text="Password"
			android:textSize="16sp"
			android:textStyle="bold"
			android:singleLine="true"
			android:gravity="left|center_vertical|center_horizontal"
			android:layout_gravity="left|center_vertical|center_horizontal"
		/>
		<EditText
			android:id="@+id/EditText_passwd"
			android:layout_width="50dp" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical|left"
			android:layout_gravity="center|center_vertical|center_horizontal"
			android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#A9A9A9"
			android:text=""
		/>
	</LinearLayout>



	<!-- Received -->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="#A9A9A9"
		android:text="[Received]"
		android:textSize="16sp"
		android:textStyle="bold"
		android:singleLine="true"
		android:gravity="left|center_vertical|center_horizontal"
		android:layout_gravity="left|center_vertical|center_horizontal"
	/>
	<ScrollView
		android:id="@+id/ScrollView_received_data"
		android:visibility="visible"
		android:background="#00000000"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="300dp"
		android:hapticFeedbackEnabled="true"
		android:fadeScrollbars="true"
	>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
		>
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			>
				<ImageView
					android:visibility="visible"
					android:layout_width="1dp"
					android:layout_height="fill_parent"
					android:layout_marginLeft="2dp"
					android:layout_marginRight="2dp"
					android:background="#A9A9A9"
					android:src="#A9A9A9"
					android:gravity="left|center_vertical"
				/>

				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:orientation="vertical"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
				>
					<TextView
						android:id="@+id/TextView_recv"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textColor="#A9A9A9"
						android:text=""
						android:textSize="16sp"
						android:textStyle="bold"
						android:singleLine="false"
						android:gravity="left|center_vertical"
						android:layout_gravity="left|center_vertical"
					/>
					<ImageView
						android:visibility="visible"
						android:layout_width="fill_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:background="#A9A9A9"
						android:src="#A9A9A9"
						android:gravity="center|center_vertical|center_horizontal"
					/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
